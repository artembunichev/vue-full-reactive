{
	"compilerOptions": {
	  "target": "ESNext",
	  "lib": ["ES2020", "DOM"],
	  "module": "ESNext",
	  "moduleResolution": "Node",
	  "strict": true,
	  "isolatedModules": true,
	  "skipLibCheck": true,
	  "noEmit": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true
	},
	"include": [ "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue" ],
	"references": [ { "path": "./tsconfig.node.json" } ]
  }
