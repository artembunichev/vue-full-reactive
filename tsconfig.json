{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "Node",
		"lib": [ "es2020", "DOM" ],
		"noEmit": false,
		"outDir": "dist",
		"declaration": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
	},
	"exclude": [ "node_modules", "dist", "demo" ]
}
